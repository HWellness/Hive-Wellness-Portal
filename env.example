# Database Configuration
# Get your connection string from Neon Database or your PostgreSQL provider
DATABASE_URL=postgresql://user:password@host/database?sslmode=require&channel_binding=require

# Server Configuration
PORT=5000
NODE_ENV=development


CLIENT_URL=https://api.hive-wellness.co.uk
BASE_URL=http://localhost:5000


# Session Configuration
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-session-secret-here-generate-with-openssl

# Email Services (SendGrid)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=support@hive-wellness.co.uk

# Payment Processing (Stripe)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_TEST_SECRET_KEY=sk_test_your-stripe-test-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_CONNECT_CLIENT_ID=ca_your-stripe-connect-client-id
STRIPE_WEBHOOK_SECRET_LIVE=whsec_your-stripe-webhook-secret
STRIPE_WEBHOOK_SECRET_TEMP=whsec_your-stripe-webhook-secret-temp

# SMS & WhatsApp (Twilio)
# Get from: https://console.twilio.com/us1/develop/api-keys
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Video Sessions (Daily.co)
# Get from: https://dashboard.daily.co/developers
DAILY_API_KEY=your-daily-api-key

# AI Services (OpenAI)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Google Workspace Integration
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}
GOOGLE_SERVICE_ACCOUNT_SUBJECT=support@hive-wellness.co.uk
GOOGLE_ADMIN_EMAIL=support@hive-wellness.co.uk
GOOGLE_WORKSPACE_DOMAIN=hive-wellness.co.uk
CALENDAR_WEBHOOK_URL=http://localhost:5000/api/calendar/webhook

# HubSpot Integration
# Get from: https://app.hubspot.com/private-apps
HUBSPOT_API_KEY=your-hubspot-api-key

# Testing (optional)
TEST_PHONE_NUMBER=+1234567890
TEST_NOTIFICATIONS=false

